<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/mainTxt"
        android:layout_width="wrap_content"
        android:text="Spyros Vasileiou"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mainImg"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/mainBtn"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        android:text="Press me"
        android:textStyle="bold"
        android:textSize="20sp"
        android:backgroundTint="@color/colorAccent"
        android:foregroundTint="@color/colorPrimary"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/mainBtn3"
        android:text="3"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/mainBtn2"
        android:text="2"
        android:backgroundTint="@android:color/holo_green_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/mainBtn1"
        android:text="1"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/mainImg"
        android:layout_width="48dp"
        android:src="@android:drawable/ic_media_play"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/mainImg2"
        android:layout_width="48dp"
        android:src="@android:drawable/ic_menu_my_calendar"
        app:layout_constraintRight_toLeftOf="@+id/mainImg"
        app:layout_constraintBottom_toBottomOf="@+id/mainImg"
        android:layout_height="48dp" />

    <ImageView
        android:id="@+id/mainImg3"
        android:layout_width="48dp"
        android:src="@android:drawable/ic_btn_speak_now"
        app:layout_constraintLeft_toRightOf="@id/mainImg"
        app:layout_constraintBottom_toBottomOf="@+id/mainImg"
        android:layout_height="48dp" />



</androidx.constraintlayout.widget.ConstraintLayout>